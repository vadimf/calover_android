<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/innerOnboarding2"
    android:layout_width="267.5dp"
    android:layout_height="454.4dp"
    android:background="@drawable/boarding_rounded"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:elevation="8dp">

    <TextView
        android:id="@+id/textView2"
        style="@style/OnBoardingText"
        android:layout_width="267.5dp"
        android:layout_height="120dp"
        android:layout_marginTop="281dp"
        android:maxLines="4"
        android:text="@string/onboarding_text_2"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="293dp"
        android:layout_height="204dp"
        android:layout_marginEnd="10.5dp"
        android:layout_marginBottom="267.4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_illustration_2"
        app:layout_constraintEnd_toEndOf="@+id/innerOnboarding2"
        app:layout_constraintBottom_toBottomOf="@+id/innerOnboarding2"
        android:elevation="8dp" />

    <ImageView
        android:layout_width="187dp"
        android:layout_height="35.8dp"
        android:layout_marginStart="127dp"
        android:layout_marginBottom="209.7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_line_2"
        app:layout_constraintStart_toStartOf="@+id/innerOnboarding2"
        app:layout_constraintBottom_toBottomOf="@+id/innerOnboarding2"
        android:elevation="8dp" />

</android.support.constraint.ConstraintLayout>
