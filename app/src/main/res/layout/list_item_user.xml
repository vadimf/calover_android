<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ListItem"
    tools:ignore="RtlHardcoded">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/list_item_side_margin"
        android:scaleType="centerCrop"
        tools:src="@drawable/user_avatar_default"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_view"
        app:riv_corner_radius="29dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/text_user_login"
        tools:text="@string/Username"
        android:paddingLeft="@dimen/padding_common_twice"
        style="@style/UserTitleStyle" />

    <CheckBox
        android:id="@+id/checkbox_user"
        style="@style/UserCheckboxStyle" />

</LinearLayout>