<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            style="@style/PrimarySmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:paddingStart="19dp"
            android:text="@string/my_cats"
            android:textColor="@color/colorPrimary"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView1"
            android:layout_toStartOf="@+id/textView2"
            android:theme="@style/SeekBarTheme"/>

        <TextView
            android:id="@+id/textView2"
            style="@style/PrimarySmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="19dp"
            android:text="@string/explore"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_slider_private"
            style="@style/BorderlessImageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/button_slider_public"
            style="@style/BorderlessImageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/button_slider_friends"
            style="@style/BorderlessImageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/button_slider_explore"
            style="@style/BorderlessImageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textAllCaps="false"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cats_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>