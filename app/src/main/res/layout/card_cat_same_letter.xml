<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_cat_same_letter_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_cat_same_letter_padding"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cat_avatar_RoundedImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="2dp"
        app:riv_corner_radius="29dp"
        app:riv_oval="true" />

    <ImageView
        android:id="@+id/star_ImageView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cat_name_TextView"
        style="@style/PrimaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="Cat One"
        app:layout_constraintEnd_toEndOf="@+id/cat_avatar_RoundedImageView"
        app:layout_constraintStart_toStartOf="@+id/cat_avatar_RoundedImageView"
        app:layout_constraintTop_toBottomOf="@+id/cat_avatar_RoundedImageView" />
</android.support.constraint.ConstraintLayout>