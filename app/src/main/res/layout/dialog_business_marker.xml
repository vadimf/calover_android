<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/textView_dialog_name"
        style="@style/SecondaryTextView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="name"/>

    <TextView
        android:id="@+id/textView_dialog_address"
        style="@style/SecondaryTextView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dialog_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        tools:text="address"/>

    <TextView
        android:id="@+id/textView_dialog_description"
        style="@style/SecondarySmallTextView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dialog_address"
        android:layout_centerHorizontal="true"
        android:textSize="11sp"
        tools:text="description"/>
</RelativeLayout>