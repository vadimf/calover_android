<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_map_options_background"
                android:gravity="center"
                android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        style="@style/PrimarySmallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_option"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_open_feedstation"
        style="@style/PrimaryColorButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="8dp"
        android:text="@string/open_feedstation"/>

    <Button
        android:id="@+id/button_warnings"
        style="@style/OrangeColorButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_open_feedstation"
        android:layout_marginTop="8dp"
        android:text="@string/warnings"/>

    <Button
        android:id="@+id/button_emergencies"
        style="@style/RedColorButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_warnings"
        android:layout_marginTop="8dp"
        android:text="@string/emergencies"/>
</RelativeLayout>